<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTodoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTodoTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTodoField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#E0E0E0"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvTodoDelayStack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#F44336"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTodoMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            android:textSize="14sp" />

        <!-- 완료/미루기 버튼 (기본 숨김) -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:padding="4dp">

            <Button
                android:id="@+id/btnComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:backgroundTint="#32CD32"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>

            <Button
                android:id="@+id/btnDelay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미루기"
                android:backgroundTint="#DC143C"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
